<!-- 
	Edit user for Admin  
-->

<div ng-controller="UsersEditController">
	
	<h1>
		Edit User
	</h1>
	
	<div class="well">
		<form name="userForm" class="container-fluid mt-20">
			
			
			<div class="row mt-40">
				<div class="col-sm-3">
					<label for="username">Username</label>
				</div>
				<div ng-if="!user._id" class="col-sm-9 form-group" ng-class="{ 'has-error' : userForm.username.$invalid && userForm.username.$dirty }">
					<input type="text" #username="ngModel" ng-model="user.username" class="form-control" name="username" id="username" required>
				</div>
				<div ng-if="user._id" class="col-sm-9 form-group">
					\{{user.username}}
				</div>
			</div>
	
			<div class="row" ng-if="!user._id">
				<div class="col-sm-3">
					<label for="password">Password</label>
				</div>
				<div class="col-sm-9 form-group" ng-class="{ 'has-error' : userForm.password.$invalid && userForm.password.$dirty }">
					<input type="password" #password="ngModel" ng-model="user.password" class="form-control" name="password" id="password" required>
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="name">Name</label>
				</div>
				<div class="col-sm-9 form-group">
					<input type="text" ng-model="user.name" class="form-control" name="name" id="name">
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="surname">Surname</label>
				</div>
				<div class="col-sm-9 form-group">
					<input type="text" ng-model="user.surname" class="form-control" name="surname" id="surname">
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="mail">Mail</label>
				</div>
				<div class="col-sm-9 form-group">
					<input type="text" ng-model="user.mail" class="form-control" name="mail" id="mail">
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="role">Roles</label>
				</div>
				<div class="col-sm-9 form-group">
					<div class="input-group mb-20">
						<input type="text" ng-model="newRole" class="form-control" placeholder="Add a new role..." name="role" id="role">
						<span class="input-group-addon btn btn-default" ng-click="addRole()">
							<i class="glyphicon glyphicon-plus"></i>
						</span>
					</div>
	
					<!-- NO ROLES -->
					<label ng-if="!user.roles || user.roles.length==0">
						No roles assigned to user
					</label>
	
					<!-- LIST ROLES -->
					<div class="form-group" ng-class="{ 'has-error' : userForm['role_' + $index].$invalid }" ng-repeat="role in user.roles track by $index">
						<div class="input-group mt-10">
							<input required type="text" ng-model="user.roles[$index]" class="form-control" name="role_\{{$index}}" id="role_\{{$index}}" required>
							<span class="input-group-addon btn btn-default" ng-click="removeRole($index)">
								<i class="glyphicon glyphicon-remove"></i>
							</span>
						</div>
						<p ng-show="userForm['role_' + $index].$invalid" class="help-block">Value is required</p>
					</div>
	
				</div>
			</div>
			
			
	
			<div class="mt-40">
				<button type="button" data-toggle="modal" data-target="#changePasswordModal" class="btn btn-warning" *ngIf="user._id">Change password</button>
					
				<button ng-if="user._id" class="btn btn-danger" data-toggle="modal" data-target="#removeModal">
					<i class="glyphicon glyphicon-trash"></i> Delete User
				</button>
				
				<button type="submit" class="btn btn-primary pull-right" ng-disabled="userForm.$invalid" ng-click="save()">Save</button>
				<button class="btn btn-link pull-right" ng-link="/manage-users">Back to Manage Users</button>
			</div>
			<div class="clearfix"></div>
		</form>
		
	</div>
	
	
	<!-- MODAL CHANGE PASSWORD -->
	<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Change Password</h4>
				</div>
				<form name="passwordForm" class="container-fluid">
					<div class="modal-body">

						<div class="row">
							<div class="col-sm-3">
								<label for="password-old">Password Admin</label>
							</div>
							<div class="col-sm-9 form-group">
								<input type="password" ng-model="passwordAdmin" class="form-control" name="password-old" id="password-old" required>
							</div>
						</div>
						
						<div class="row">
							<div class="col-sm-3">
								<label for="password-new">New Password</label>
							</div>
							<div class="col-sm-9 form-group">
								<input type="password" ng-model="passwordNew" class="form-control" name="password-new" id="password-new" required>
							</div>
						</div>
						
						<div class="row">
							<div class="col-sm-3">
								<label for="password-new-confirm">Confirm New Password</label>
							</div>
							<div class="col-sm-9 form-group" ng-class="{ 'has-error' : passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm }">
								<input type="password" ng-model="passwordNewConfirm" class="form-control" name="password-new-confirm" id="password-new-confirm" required>
								<p ng-show="passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm" class="help-block">Passwords missmatch</p>
							</div>
						</div>
							
					</div>
	
					<div class="modal-footer">
						<div ng-if="showError" class="alert alert-danger text-left">
							<strong>Error!</strong> Admin passsword not valid
						</div>

						<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						<button type="button" class="btn btn-primary" ng-disabled="!passwordForm.$valid || (passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm)" ng-click="changePassword()">Save</button>

					</div>
				</form>
			</div>
		</div>
	</div>
	
	    
    
    <!-- MODAL REMOVE -->
    
    <div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Delete item</h4>
                </div>
                <div class="modal-body">
                    Do you want confirm delete? 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="remove()">YES</button>
                </div>
            </div>
        </div>
    </div>

</div>