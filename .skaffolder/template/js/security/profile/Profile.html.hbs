<div ng-controller="ProfileController">
	
	
	<div class="well">

		<h1>
			My Profile
		</h1>

		<form name="skaffolderForm" class="container-fluid mt-20">
		
			<div class="row">
				<div class="col-sm-3">
					<label for="username">Username</label>
				</div>
				<div class="col-sm-9 form-group">
					\{{user.username}}
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="name">Name</label>
				</div>
				<div class="col-sm-9 form-group" ng-class="{ 'has-error' : skaffolderForm.name.$invalid }">
					<input type="text" ng-model="user.name" class="form-control" name="name" id="name">
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="surname">Surname</label>
				</div>
				<div class="col-sm-9 form-group" ng-class="{ 'has-error' : skaffolderForm.surname.$invalid }">
					<input type="text" ng-model="user.surname" class="form-control" name="surname" id="surname">
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm-3">
					<label for="mail">Mail</label>
				</div>
				<div class="col-sm-9 form-group" ng-class="{ 'has-error' : skaffolderForm.mail.$invalid }">
					<input type="text" ng-model="user.mail" class="form-control" name="mail" id="mail">
				</div>
			</div>
	
	
			<div class="row mt-40">
				<div class="col-xs-12">
					<button type="button" data-toggle="modal" data-target="#changePasswordModal" class="btn btn-warning change-pass">Change pass</button>
					<button type="button" class="btn btn-primary pull-right" ng-disabled="skaffolderForm.invalid" ng-click="save()">Save</button>
					<button type="button" class="btn btn-link pull-right" ng-link="/home">Back to Home</button>
				</div>
			</div>
			<div class="clearfix"></div>
				
		</form>
		
	</div>
	
	
	<!-- MODAL CHANGE PASSWORD -->
	<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Change Password</h4>
				</div>
				<form name="passwordForm" class="container-fluid">
					<div class="modal-body">

						<div class="row">
							<div class="col-sm-3">
								<label for="password-old">Old Password</label>
							</div>
							<div class="col-sm-9 form-group">
								<input type="password" ng-model="passwordOld" class="form-control" name="password-old" id="password-old" required>
							</div>
						</div>
						
						<div class="row">
							<div class="col-sm-3">
								<label for="password-new">New Password</label>
							</div>
							<div class="col-sm-9 form-group">
								<input type="password" ng-model="passwordNew" class="form-control" name="password-new" id="password-new" required>
							</div>
						</div>
						
						<div class="row">
							<div class="col-sm-3">
								<label for="password-new-confirm">Confirm New Password</label>
							</div>
							<div class="col-sm-9 form-group" ng-class="{ 'has-error' : passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm }">
								<input type="password" ng-model="passwordNewConfirm" class="form-control" name="password-new-confirm" id="password-new-confirm" required>
								<p ng-show="passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm" class="help-block">Passwords missmatch</p>
							</div>
						</div>
							
					</div>
	
					<div class="modal-footer">
						<div ng-if="showError" class="alert alert-danger text-left">
							<strong>Error!</strong> Old passsword not valid.
						</div>

						<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						<button type="button" class="btn btn-primary" ng-disabled="!passwordForm.$valid || (passwordNew && passwordNewConfirm && passwordNew !== passwordNewConfirm)" ng-click="changePassword()">Save</button>

					</div>
				</form>
			</div>
		</div>
	</div>
	
</div>